@model SaafiSystems.ViewModels.AddLoadViewModel


<h1>Add Load</h1>

<form asp-controller="Load" asp-action="Add" method="post">

    <div class="form-group">
        <label asp-for="Date"></label>
        <input class="form-control" asp-for="Date" />
        <span asp-validation-for="Date"></span>
    </div>
    <div class="form-group">
        <label asp-for="Reference"></label>
        <input class="form-control" asp-for="Reference" />
        <span asp-validation-for="Reference"></span>
    </div>
    <div class="form-group">
        <label asp-for="Owner"></label>
        <input class="form-control" asp-for="Owner" />
        <span asp-validation-for="Owner"></span>
    </div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input class="form-control" asp-for="Description" />
        <span asp-validation-for="Description"></span>
    </div>
 
    <div class="form-group">
        <label asp-for="LoadCategoryID"></label>
        <select asp-for="LoadCategoryID" asp-items="Model.LoadCategories"></select>
    </div>

    <input type="submit" value="Add Load" />

</form>
