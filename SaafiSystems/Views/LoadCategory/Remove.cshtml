@model List<SaafiSystems.Models.LoadCategory>

<h1>@ViewBag.title</h1>
@if (Model.Count == 0)
{
    <p>No load categoris to remove</p>

}

<form asp-controller="LoadCategory" asp-action="Remove" method="post">


    @foreach (var entry in Model)
    {
        <input type="checkbox" name="loadCategoryIds" id="@entry.ID" value="@entry.ID" />
        <label for="@entry.ID">@entry.Name</label>
        <br />
    }

    <input type="submit" value="Remove Selected Category(s)" />
</form>