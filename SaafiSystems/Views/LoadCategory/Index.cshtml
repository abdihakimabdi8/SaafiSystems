@model List<SaafiSystems.Models.LoadCategory>
<div class="page-header" style="background:white">
    <h1 style=" font-size: 21px;color: #0b131d; font-weight: 400;font-size: 21px;margin-top: 20px;margin-bottom: 10px;font-family: inherit;font-weight: 400;line-height: 1.1;color: inherit;margin: .67em 0; font-size: 2em; box-sizing: border-box;display: block;font-size: 2em; font-weight: bold;">
        Trip Categories
        <a asp-controller="LoadCategory" asp-action="Add" class="hidden-xs btn btn-primary pull-right">+ Add Category</a> <a asp-controller="LoadCategory" asp-action="Add" class="visible-xs-block mobile-add btn-block btn btn-success">+ Add Category</a>
        <a asp-controller="Load" asp-action="Add" class="hidden-xs btn btn-success pull-right">+ New Trip</a> <a asp-controller="Load" asp-action="Add" class="visible-xs-block mobile-add btn-block btn btn-success">+ New Trip</a>
    </h1>
</div>


@if (Model.Count == 0)
{
    <p>No Trip Categories yet</p>

}
<form asp-controller="LoadCategory" asp-action="Remove" method="post">
    <table class="table ">
        <tr>
            <th>Reference</th>
            <th>Expense Type</th>
            <th>Action</th>
        </tr>

        @foreach (var category in Model)
        {

            <tr>
                <td><a asp-controller="Load" asp-route-id="@category.ID">@category.ID</a></td>
                <td><a asp-controller="Load" asp-route-id="@category.ID">@category.Name</a></td>
                <td>
                    <input type="checkbox" name="loadCategoryIds" id="@category.ID" value="@category.ID" class="btn btn-danger btn-sm" />
                    <input type="submit" value="Delete" class="btn btn-danger btn-sm" />
                </td>
                <td>
                    <input type="checkbox" name="loadCategoryIds" id="@category.ID" value="@category.ID" class="btn btn-danger btn-sm" />
                    <input type="submit" value="Edit" class="btn btn-info btn-sm" />
                </td>
            </tr>

        }

    </table>

</form>



<p><a asp-controller="LoadCategory" asp-action="Add">Add Category</a></p>
