@model List<SaafiSystems.Models.Expense>

<h1>@ViewBag.Title</h1>

@if (Model.Count == 0)
{
    <p>No expense entries yet!</p>
}

<table class="table">

    <tr>
        <th>Date</th>
        <th>Reference</th>
        <th>Owner</th>
        <th>Name</th>
        <th>Description</th>
        <th>Amount</th>
        <th>Category</th>
    </tr>

    @foreach (var expense in Model)
    {
        <tr>
            <td>@expense.Date</td>
            <td>@expense.Reference</td>
            <td>@expense.Owner</td>
            <td>@expense.Name</td>
            <td>@expense.Description</td>
            <td>@expense.ExpenseCategory.Name</td>
        </tr>
    }
</table>

<p><a asp-controller="Expense" asp-action="Add">Add Expense</a></p>
