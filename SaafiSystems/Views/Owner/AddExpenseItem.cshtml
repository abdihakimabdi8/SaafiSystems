<form asp-controller="Owner" asp-action="AddExpenseItem" method="post">
    <table class="table table-striped ">
        <tr>
            <th>Date</th>
            <th>Reference</th>
            <th>Description</th>
            <th>Owner</th>
            <th>Amount</th>
            <th>Cartegory</th>
            <th></th>
            <th>Assign to Owner</th>

        </tr>

        @foreach (var expense in Model.Expenses)
        {

            <tr>
                <td> @expense.Date </td>
                <td> @expense.Reference </td>
                <td> @expense.Description </td>
                <td> @expense.Owner </td>
                <td> @expense.Amount </td>
                <td> @expense.ExpenseCategory </td>




                <td></td>
                <td>


                    <input type="checkbox" name="ExpenseID" id="@expense.ID" value="@expense.ID">
                    <input type="hidden" name="OwnerID" value="@Model.Owner.ID" />



                    <input type="submit" class="hidden-xs btn btn-info btn-xs pull-right" value=" + Assign Item" />

                </td>

            </tr>

        }

    </table>

</form>






