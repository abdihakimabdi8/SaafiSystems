@model List<SaafiSystems.Models.Owner>

<h1>@ViewBag.title</h1>
@if (Model.Count == 0)
{
    <p>No owner-operators to remove</p>

}

<form asp-controller="Owner" asp-action="Remove" method="post">


    @foreach (var owner in Model)
    {
        <input type="checkbox" name="ownerIds" id="@owner.ID" value="@owner.ID" />
        <label for="@owner.ID">@owner.Name</label>
        <br />
    }

    <input type="submit" value="Remove Selected Category(s)" />
</form>