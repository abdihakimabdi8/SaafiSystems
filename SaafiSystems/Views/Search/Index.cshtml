@model SaafiSystems.ViewModels.SearchLoadsViewModel


<form action="/Search/Results">
    <p>
        @foreach (var column in Model.Columns)
        {
            var checkedColumn = column.Equals(Model.Column);

            <span>
                <input type="radio"
                       name="Column"
                       id="@column"
                       value="@column"
                       checked="@checkedColumn" />
                <label for="@column">@column</label>
            </span>
        }
    </p>

    <p>
        <label asp-for="Value"></label>
        <input asp-for="Value" />
    </p>

    <input type="submit" value="Search" />
</form>

<hr />

@if (Model.Loads != null)
{

    <h3>@Model.Loads.Count Result(s)</h3>
    <table class="table table-striped">
        <tr>
            <th>Date</th>
            <th>Number</th>
            <th>Description</th>
            <th>Owner</th>
            <th>Pay</th>
            <th>Advance</th>
            <th>Net</th>
        </tr>
    </table>
        @foreach (var load in Model.Loads)
        {
            <table class="table table-striped">
                <tr>

                    <td>@load.Date</td>
                    <td>@load.Number</td>

                    <td>@load.Description</td>

                    <td>@load.Owner</td>

                    <td>@load.Pay</td>

                    <td>@load.Advance</td>

                    <td>@load.Net</td>
                </tr>
            </table>
        }
}
