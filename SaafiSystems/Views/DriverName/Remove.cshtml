@model List<SaafiSystems.Models.DriverName>

<h1>@ViewBag.title</h1>
@if (Model.Count == 0)
{
    <p>No driver entries to remove</p>

}

<form asp-controller="DriverName" asp-action="Remove" method="post">


    @foreach (var entry in Model)
    {
        <input type="checkbox" name="driverIds" id="@entry.ID" value="@entry.ID" />
       
        <br />
    }

    <input type="submit" value="Remove Selected Entries(s)" />
</form>